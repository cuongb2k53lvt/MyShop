<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bt_item_history"
    android:paddingVertical="10dp">


    <LinearLayout
        android:id="@+id/ll_item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_orderstatus_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:paddingLeft="20dp"
            android:text="123"
            android:textColor="#8E97FD"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_item_history">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/img_subproduct0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name_subproduct0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15sp"
            android:layout_toLeftOf="@+id/tv_sumproduct0"
            android:layout_toRightOf="@+id/card"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sumproduct0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="20sp"
            android:text="x1"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_subproduct0"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/card"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: "
                    android:textColor="#9B9B9B"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_size_subproduct0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="20sp"
                    android:text="0đ"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_sub"
        android:id="@+id/ll_sumSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_sumSP"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0 sản phẩm"
            android:textColor="#80000000"
            android:textSize="14dp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_sumPrice"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0đ"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:textStyle="italic" />


    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_below="@+id/ll_sumSP"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#8E97FD"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Xem chi tiết"
        android:textColor="#8E97FD"
        android:textSize="17dp" />
    <View
        android:id="@+id/view_2"
        android:layout_below="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#8E97FD"/>

    <TextView
        android:id="@+id/item_orderstatus_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="left"
        android:text="Giao thành công"
        android:textColor="@color/green_active"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/item_orderstatus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_orderstatus_status"
        android:layout_marginHorizontal="20dp"
        android:gravity="right"
        android:text="123"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:visibility="visible" />

</RelativeLayout>